<main>
  <p id="notice"><%= notice %></p>
  <div class='container'>
    <div class='row'>
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0">
        <h2>Log in</h2>
        <%= render "devise/shared/error_messages", resource: resource %>
        <%= form_with(model: @user, url: user_session_path) do |f| %>
          <div class="field">
            <%= f.label :name %><br>
            <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
          </div>
          <div class="field">
            <%= f.label :password %><br>
            <%= f.password_field :password %>
          </div>
          <div class="field">
            <%= f.check_box :remember_me, { checked: false, value: "1", id: "user_remember_me", autocomplete: "off" } %>
            <%= f.label :remember_me, for: "user_remember_me" %>
          </div>
          <div class="actions">
            <%= f.submit 'Log in', class: 'btn btn-sm btn-primary', 'data-disable-with': 'Log in' %>
          </div>
        <% end %>
        <a href="<%= new_user_registration_path %>">Sign up</a><br />
        <a href="<%= new_user_password_path %>">Forgot your password?</a><br />
      </div>
    </div>
  </div>
</main>
<footer>
  <div class='container mt-5'>
    <div class='row'>
      <div class='mx-auto'>
        <p>CopyRight Infratop.inc</p>
      </div>
    </div>
  </div>
</footer>