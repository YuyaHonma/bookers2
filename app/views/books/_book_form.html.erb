<div class="col-md-9">
  <h2>New book</h2>
  <!-- 新しい本のフォーム -->
    <%= form_with model: Book.new, url: books_path, method: :post do |f| %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :body %>
        <%= f.text_area :body, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.submit 'Create Book', class: "btn btn-success" %>
      </div>
  <% end %>
</div>