<% if @book.errors.any? %>
  <div class="alert alert-danger">
    <%= pluralize(@book.errors.count, "error") %> prohibited this object from being saved:
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<main>
        <p id="notice"></p>
        <div class='container px-5 px-sm-0'>
  
  <div class='row'>
    <div class='col-md-3'>
    <%= render 'user_info', user: current_user %>
    <!-- 新しい本のフォーム -->
    <%= render 'book_form', book: @book, user: current_user %>
  </div>

  <h2>Books</h2>
  <table class="table table-striped">
    <!-- テーブルのヘッダー -->
    <thead>
      <tr>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
    </thead>
    <!-- テーブルのボディ -->
    <tbody>
  <% @books.each do |book| %>
    <tr onclick="window.location='<%= book_path(book) %>'" style="cursor: pointer;">
      <td>
        <% if book.user.avatar.attached? %>
          <%= link_to(image_tag(book.user.avatar.variant(resize: "80x80"), class: "img-thumbnail"), user_path(book.user)) %>
        <% else %>
          <%= link_to(image_tag("no_image.jpg", alt: "No Image", class: "img-thumbnail", width: 80, height: 80), user_path(book.user)) %>
        <% end %>
      </td>
      <td><%= link_to book.title, book_path(book) %></td>
      <td><%= book.body %></td>
    </tr>
  <% end %>
</tbody>
  </table>
</div>