<main>
  <p id="notice"></p>
  <div class="container px-5 px-sm-0">
    <% if @book.errors.any? %>
      <div class="alert alert-danger">
        <%= pluralize(@book.errors.count, "error") %> prohibited this object from being saved:
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

   　 <div class="row">
      <div class="col-md-3">
        <%= render 'user_info', user: current_user %>
        <%= render 'book_form', book: @book, user: current_user %>
        </div>
     
      <div class='col-md-8 offset-md-1'>
        <h2>Books</h2>
        <table class='table table-hover table-inverse'>
          <!-- テーブルのヘッダー -->
          <thead>
            <tr>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <!-- テーブルのボディ -->
          <tbody>
            <% @books.each do |book| %>
              <tr onclick="window.location='<%= book_path(book) %>'" style="cursor: pointer;">
                <td>
                  <% if book.user.avatar.attached? %>
                    <%= link_to(user_path(book.user)) do %>
                      <%= image_tag(book.user.avatar.variant(resize: "80x80"), class: "img-thumbnail") %>
                    <% end %>
                  <% else %>
                    <%= link_to(user_path(book.user)) do %>
                      <%= image_tag("no_image.jpg", alt: "No Image", class: "img-thumbnail", width: 80, height: 80) %>
                    <% end %>
                  <% end %>
                </td>
                <td><%= link_to book.title, book_path(book) %></td>
                <td><%= book.body %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
</main>

<footer>
  <div class="container mt-5">
    <div class="row">
      <div class="mx-auto">
        <p>CopyRight Infratop.inc</p>
      </div>
    </div>
  </div>
</footer>
</div>