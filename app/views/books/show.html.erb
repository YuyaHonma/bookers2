<main>
<p id="notice"></p>
 <div class='container'>
  <div class="row">
    <div class="col-md-3">
      <%= render 'user_info', user: @user %>
      <%= render 'book_form', book: @book, user: current_user %>
    </div>
      <!-- Books -->
     <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
        <table class="table">
          <tbody>
            <tr>
              <td>
                <% if @user.avatar.attached? %>
                  <%= link_to user_path(@user) do %>
                    <%= image_tag @user.avatar.variant(resize: "80x80"), class: "img-thumbnail" %>
                    <br>
                    <%= @user.name %>
                  <% end %>
                <% else %>
                  <%= link_to user_path(@user) do %>
                    <%= image_tag "no_image.jpg", alt: "No Image", class: "img-thumbnail", width: 80, height: 80 %>
                    <br>
                    <%= @user.name %>
                  <% end %>
                <% end %>
              </td>
             <td>
                <%= link_to @book.title, book_path(@book) %>
              </td>
              <td><%= @book.body %></td>
              <!-- Edit と Destroy ボタン -->
              <% if @book.user == current_user %>
                <td>
                  <%= link_to edit_book_path(@book), class: "btn btn-outline-secondary btn-sm" do %>
                    Edit
                  <% end %>
                </td>
                <td>
                  <%= link_to @book, method: :delete, data: { confirm: '本当に消しますか?' }, class: "btn btn-outline-danger btn-sm" do %>
                    Destroy
                  <% end %>
                </td>
              <% end %>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
 </main>
 <footer>
  <div class='container mt-5'>
  	<div class='row'>
    	<div class='mx-auto'>
    		<p>CopyRight Infratop.inc</p>
    	</div>
    </div>
  </div>
</footer>
