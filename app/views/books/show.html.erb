<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'user_info', user: @user %>
    </div>
    <div class="col-md-9">
      <%= render 'book_form', book: @book, user: current_user %>

      <!-- Books -->
      <div class="col-md-9">
        <!-- Book detail -->
        <h2>Book detail</h2>

        <table class="table">
          <!-- テーブルのボディ -->
          <tbody>
            <tr>
              <td>
                <% if @user.avatar.attached? %>
                  <%= link_to user_path(@user) do %>
                    <%= image_tag @user.avatar.variant(resize: "80x80"), class: "img-thumbnail" %>
                    <br>
                    <%= @user.name %>
                  <% end %>
                <% else %>
                  <%= link_to user_path(@user) do %>
                    <%= image_tag "no_image.jpg", alt: "No Image", class: "img-thumbnail", width: 80, height: 80 %>
                    <br>
                    <%= @user.name %>
                  <% end %>
                <% end %>
              </td>
              <td><%= @book.title %></td>
              <td><%= @book.body %></td>
              <!-- Edit と Destroy ボタン -->
              <% if @book.user == current_user %>
                <td>
                  <%= link_to edit_book_path(@book), class: "btn btn-outline-secondary btn-sm" do %>
                    Edit
                  <% end %>
                </td>
                <td>
                  <%= link_to @book, method: :delete, data: { confirm: '本当に消しますか?' }, class: "btn btn-outline-danger btn-sm" do %>
                    Destroy
                  <% end %>
                </td>
              <% end %>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
