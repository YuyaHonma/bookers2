<h2>User info</h2>
 <table class='table'>
     <tbody>
      <tr>
    <!-- ユーザーの写真 -->
   <% if user&.avatar&.attached? %>
    <%= image_tag user.avatar.variant(resize: "100x100") %>
  <% else %>
    <%= image_tag "no_image.jpg", alt: "No Image", width: 100, height: 100 %>
  <% end %>
     </tr>
          <tr>
            <th>name</th>
            <th><%= user&.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= user&.introduction %></th>
          </tr>
          </tbody>
          </table>
          <div class='row'>
  　　　　　　<%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block edit_user_#{user.id} d-flex align-items-center" do %>
　　　　  <i class="fas fa-user-cog me-2"></i>
            <% end %>
　　　  　</div>

          