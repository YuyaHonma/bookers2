<h2 style="white-space: nowrap;">User info</h2>
 <table class='table'>
  <tr>
    <!-- ユーザーの写真 -->
   <% if user.avatar.attached? %>
    <%= image_tag user.avatar.variant(resize: "100x100") %>
   <% else %>
    <%= image_tag "no_image.jpg", alt: "No Image", width: 100, height: 100 %>
   <% end %>
          </tr>
          <tr>
            <th>name</th>
            <td><%= user.name %></td>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= user.introduction %></th>
          </tr>
         </table>
          <!-- 移動した部分 -->
          <tr>
            <td>
              <div class='row'>
             <%= link_to edit_user_path(current_user), class: "btn btn-outline-secondary btn-block edit_user_#{current_user.id}" do %>
              <i class="fas fa-user-cog"></i>
             <% end %>
             </div>
            </td>
          </tr>

