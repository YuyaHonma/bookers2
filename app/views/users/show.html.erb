<div class="container">
  <div class="row">
    <!-- ユーザー情報 -->
    <%= render 'books/user_info', user: @user %>
    <!-- 投稿フォーム -->
    <%= render 'books/book_form', book: @book, user: current_user %>

    <h3>Books</h3>
    <table class="table">
          <!-- テーブルのボディ -->
          <tbody>
           <% @books.each do |book| %>
  <tr>
    <td>
      <%= link_to user_path(book.user) do %>
        <% if book.user.avatar.attached? %>
          <%= image_tag book.user.avatar.variant(resize: "80x80"), class: "img-thumbnail" %>
        <% else %>
          <%= image_tag "no_image.jpg", alt: "No Image", class: "img-thumbnail", width: 80, height: 80 %>
        <% end %>
        <br>
        <%= book.user.name %>
      <% end %>
    </td>
    <td><%= link_to book.title, book_path(book) %></td>
    <td><%= book.body %></td>
    <!-- Edit と Destroy ボタン -->
  </tr>
<% end %>
          </tbody>
        </table>
  </div>
</div>
