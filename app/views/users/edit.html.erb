<!-- app/views/users/edit.html.erb -->

<h1>User info</h1>

<% if @user.errors.any? %>
  <%= @user.errors.count %>error prohibited this obj from being saved:
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with(model: current_user, url: user_path(current_user), method: :patch, local: true) do |form| %>
  <!-- 名前のフィールド -->
  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <!-- 画像のアップロード -->
  <div class="field">
    <%= form.label :image %>
    <%= form.file_field :image %>
  </div>

  <!-- 自己紹介文のフィールド -->
  <div class="field">
    <%= form.label :introduction %>
    <%= form.text_area :introduction %>
  </div>

  <div class="actions">
    <%= form.submit "Update Profile" %>
  </div>
<% end %>